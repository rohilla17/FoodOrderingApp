<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderApp.RiderMapActivity"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RiderApp.RiderMapActivity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/btn_opn_google_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_normal_200"
        android:layout_marginBottom="@dimen/margin_normal_200"
        android:background="@drawable/shape_circle_btn_orange"
        android:elevation="2dp"
        android:fontFamily="@font/avenir_next_demi_bold"
        android:text="Show on Map"
        android:textSize="@dimen/font_small_150"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/btn_order_completed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_order_completed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_normal_200"
        android:layout_marginBottom="@dimen/margin_normal_200"
        android:background="@drawable/shape_circle_btn_orange"
        android:elevation="2dp"
        android:fontFamily="@font/avenir_next_demi_bold"
        android:text="Order Delivered"
        android:textSize="@dimen/font_small_150"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>